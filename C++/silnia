#include <iostream>
#include <cmath>
using namespace std;
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int silnia(int n){
	if(n>0){
	return silnia(n-1)*n;
	}else{
		return 1;
	}
	
}

int petla(int n){
	int w=1;
	for(int i=1;i<=n;i++){
		w=i*w;
	}
	return w;
}


int main(int argc, char** argv){
	int n;
	cout<<"podaj silnie: ";
	cin>>n;
	cout<<endl;
	cout<<silnia(n)<<endl;
	cout<<petla(n)<<endl;
	

}
